<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">成绩单</h3>
    </div>
    <div class="panel-body" style="min-height: 450px">
        <% if !@grades.nil? %>
            <table class="table table-hover table-striped">
            <thead class="thead-light" style="font-size:15px;">
                <tr>
                <th>课程名称</th>
                <th>课程编码</th>
                <th>任课教师</th>
                <th>课程属性</th>
                <th>课时/学分</th>
                <th>成绩</th>
                </tr>
            </thead>
            <tbody>
                <% @grades.each do |grade| %>
                    <% if !grade.grade.nil?%>
                        <tr>
                            <td><%=grade.course.name%></td>
                            <td><%=grade.course.course_code%></td>
                            <td><%=grade.course.teacher.name%></td>
                            <td><%=grade.course.course_type%></td>
                            <td><%=grade.course.credit%></td>
                            <td><%=grade.grade%></td>
                        </tr>
                    <% end %>
                <% end %>
            </tbody>
            </table>
        <% else %>
            <center><p>选课记录为空</p></center>
        <% end %>
    </div>
</div>