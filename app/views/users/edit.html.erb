<% provide(:title, "Edit user") %>
<h3>更新个人信息</h3>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages' %>
            <%= f.label :name, "姓名" %>
            <%= f.text_field :name, class: 'form-control' %>
            <%= f.label :email, "邮箱" %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :major, "专业：" %>
            <%= f.text_field :major, class: 'form-control' %>
            <%= f.label :department, "单位：" %>
            <%= f.text_field :department, class: 'form-control' %>
            <%= f.label :password, "新密码" %>
            <%= f.password_field :password, class: 'form-control', placeholder: "输入密码，不更改密码无需输入"  %>
            <%= f.label :password_confirmation, "确认新密码" %>
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "确认新密码，不更改密码无需输入"  %>
            <%= f.submit "保存更改", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>